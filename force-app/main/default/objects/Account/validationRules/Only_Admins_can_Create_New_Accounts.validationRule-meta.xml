<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Only_Admins_can_Create_New_Accounts</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISNEW(), 
CreatedBy.Profile.Name &lt;&gt; &quot;System Administrator&quot;)</errorConditionFormula>
    <errorMessage>Only Admins can create accounts from the Accounts tab. Please create an account during the creation of a Contact.</errorMessage>
</ValidationRule>
